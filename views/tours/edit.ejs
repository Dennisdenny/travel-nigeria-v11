<% include ../partials/header %>

<div class = "container">
    <h3 style = "text-align:center">Edit <%=toursites.name%></h3>

     <div style = "width:30%; margin:25px auto">

        <form action = "/toursites/<%= toursites._id %>?_method=PUT" method="POST">
            <div class = "form-group">
                 <input class = "form-control" type = "text" name = "name" value = "<%=toursites.name%>">
            </div>
            <div class = "form-group">
                <input class = "form-control" type = "text" name = "img" value = "<%=toursites.img%>">
                </div>
             <div class = "form-group">
                <input class = "form-control" type = "text" name = "desc" value = "<%=toursites.desc%>">
                </div>
            <div class = "form-group">
                 <input class = "btn btn-block btn-success" type = "submit">
            </div>
        </form>
        
        <a href = "/">Go to Home Page</a>
        
        <a href = "/toursites">See existing tour sites</a>
        
                 
     </div>
    
</div>



<% include ../partials/footer %>